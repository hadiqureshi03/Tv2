---
import oversigt from '../assets/oversigt.png';
import kort from '../assets/kort.png';
import enheder from '../assets/enheder.png';
import samtykke from '../assets/samtykke.png';
import persondata from '../assets/persondata.png';
---

<nav class="navbar">
  <a href="/" class="nav-item">
    <img src={oversigt.src} alt="Oversigt" />
    <span>OVERSIGT</span>
  </a>

  <a href="/betalingskort" class="nav-item">
    <img src={kort.src} alt="Betalingskort" />
    <span>BETALINGS<br>KORT</span>
  </a>

  <a href="/enheder" class="nav-item">
    <img src={enheder.src} alt="Enheder" />
    <span>ENHEDER</span>
  </a>

  <a href="/samtykke" class="nav-item">
    <img src={samtykke.src} alt="Samtykke" />
    <span>SAMTYKKER</span>
  </a>

  <a href="/persondata" class="nav-item">
    <img src={persondata.src} alt="Behandling af persondata" />
    <span>BEHANDLING AF PERSONDATA</span>
  </a>
</nav>

<style>
  .navbar {
    position: sticky;
    top: 0;
    left: 0;
    height: 100vh;
    width: 300px;
    display: flex;
    flex-direction: column;
    align-items: stretch;
    gap: 0;
    background-color: var(--background-color);
    padding: 0;
    z-index: 1000;
    flex-shrink: 0;
  }

  .nav-item {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: flex-start;
    padding: 15px 25px;
    text-decoration: none;
    color: var(--secondary-color);
    border-bottom: 2px solid #B1B1B1;
    transition: background-color 0.3s ease;
    height: 80px;
    gap: 15px;
  }


  .nav-item:hover {
    background-color: #f5f5f5;
  }

  .nav-item img {
    width: 40px;
    height: 40px;
    object-fit: contain;
    flex-shrink: 0;
  }

  .nav-item span {
    font-size: 16px;
    font-weight: bold;
    letter-spacing: 0.5px;
    text-align: left;
    line-height: 1.3;
  }

  @media (max-width: 900px) {
    .navbar {
      display: none;
    }
  }
</style>
