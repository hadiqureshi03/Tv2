---
interface Props {
    deviceIcon: string;
    deviceName: string;
    lastUsed: string;
}

const { deviceIcon, deviceName, lastUsed } = Astro.props;
---


<div class="device-box" >
    <div id="device-container">
        <div id="device-icon">
            <img src={deviceIcon} alt={deviceName} />
        </div>
        <div>
            <p>{deviceName}</p>
            <p>{lastUsed}</p>
        </div>
        <div>
            ^
        </div>
        <div id="border-seperator">

        </div>

        <button id="device-button">
            Log Ud
        </button>
    </div>
</div>

<style>
    .device-box {
        padding: 3%;
        margin-top: 20px;
        border-radius: 10px;
        background-color: var(--background-color);
        max-height: 50px;
        overflow: hidden;
        transition: 0.3s
    }   

    /* added and removed by the function in enheder.astro */
    .expanded {
        max-height: 170px;
        transition: 0.3s
    }

    #device-container {
        width: 95%;
        margin: auto;
        display: grid;
        grid-template-columns: 10% 84% 5%;
    }
    
    #device-icon {
        width: 50px;
        height: 50px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    #device-icon img {
        width: 100%;
        height: 100%;
        object-fit: contain;
    }

    #border-seperator {
        height: 3px;
        width: 100%;
        grid-column: span 3;
        background-color: lightgray;
        margin: 30px 0

    }

    #device-button {
        grid-column: span 3;
        width: 95%;
        height: 50px;
        border: 2px solid lightgray;
        background-color: white;
        margin: auto;
    }

  
</style>