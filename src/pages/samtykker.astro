---
import Layout from '../layouts/Layout.astro';
import Header from '../layouts/Header.astro';
import Navbar from '../layouts/Navbar.astro';
import Main from '../layouts/Main.astro';
import Footer from '../layouts/Footer.astro';
---

<Layout>
	<Header />
	<div class="page-wrapper">
		<Navbar />
		<div class="content-wrapper">
			<Main>
				<div class="content-container">
					<h1>SAMTYKKER</h1>
					<a href="/" class="back-link">Tilbage</a>

					<section class="consent-section">
						<div class="consent-box">
							<div class="consent-header">
								<input type="checkbox" id="consent-checkbox" class="consent-checkbox" />
								<label for="consent-checkbox" class="consent-label">
									<p class="consent-text">
										JEG ACCEPTERER AT MODTAGE MÅLRETTET MARKEDSFØRING FRA TV 2 DANMARK A/S OM
										<a href="#" class="consent-link">TV 2S PRODUKTER</a> VIA E-MAILS OG NOTIFIKATIONER I APPS.
										MARKEDSFØRINGEN KAN OMFATTE STREAMINGINDHOLD, ARTIKLER, EVENTS, PODCASTS,
										<a href="#" class="consent-link">TV 2S SAMARBEJDSPARTNERE</a> SAMT DERES PRODUKTER OG ER BASERET PÅ DATA TILKNYTTET MIT TV 2 LOGIN.
										JEG KAN ALTID TILBAGEKALDE MIT SAMTYKKE VED AT BRUGE AFMELDINGSLINKET I E-MAILS, PÅ MIT.TV2.DK ELLER VIA TV 2S APP.
									</p>
								</label>
							</div>
							<button class="read-more-btn">LÆS MERE</button>
						</div>
					</section>
				</div>
			</Main>
			<Footer />
		</div>
	</div>
</Layout>

<style>
	.page-wrapper {
		display: flex;
		position: relative;
	}

	.content-wrapper {
		flex: 1;
		border-left: 2px solid #B1B1B1;
	}

	.content-container {
		max-width: 1200px;
		margin: 0 auto;
		padding: 40px 60px 120px;
	}

	.content-container h1 {
		font-family: 'TV2', sans-serif;
		font-size: var(--h1-size);
		font-weight: bold;
		color: var(--secondary-color);
		margin: 0 0 20px 0;
		letter-spacing: 0.02em;
	}

	.back-link {
		color: var(--primary-color);
		text-decoration: none;
		font-size: 18px;
		display: inline-block;
		margin-bottom: 30px;
	}

	.back-link:hover {
		text-decoration: underline;
	}

	.consent-section {
		margin-top: 20px;
		margin-bottom: 40px;
	}

	.consent-box {
		background-color: white;
		border: 3px solid #2D5F9E;
		border-radius: 8px;
		padding: 40px;
		display: flex;
		flex-direction: column;
		gap: 24px;
	}

	.consent-header {
		display: flex;
		gap: 20px;
		align-items: flex-start;
	}

	.consent-checkbox {
		width: 24px;
		height: 24px;
		min-width: 24px;
		min-height: 24px;
		border: 2px solid var(--secondary-color);
		cursor: pointer;
		margin-top: 2px;
	}

	.consent-label {
		flex: 1;
		cursor: pointer;
	}

	.consent-text {
		font-size: 16px;
		line-height: 1.6;
		color: var(--secondary-color);
		margin: 0;
	}

	.consent-link {
		color: #2D5F9E;
		text-decoration: underline;
		font-weight: bold;
	}

	.consent-link:hover {
		opacity: 0.8;
	}

	.read-more-btn {
		background-color: #078A1D;
		color: white;
		border: none;
		border-radius: 25px;
		padding: 12px 32px;
		font-size: 14px;
		font-weight: bold;
		cursor: pointer;
		transition: opacity 0.2s ease;
		align-self: flex-start;
		margin-left: 44px;
	}

	.read-more-btn:hover {
		opacity: 0.9;
	}

	@media (max-width: 900px) {
		.content-wrapper {
			border-left: none;
		}

		.content-container {
			padding: 24px;
		}

		.content-container h1 {
			text-align: center;
		}

		.back-link {
			text-align: center;
			display: block;
		}

		.consent-box {
			padding: 24px;
		}

		.consent-header {
			flex-direction: row;
			gap: 12px;
		}

		.consent-text {
			font-size: 14px;
		}
	}
</style>
